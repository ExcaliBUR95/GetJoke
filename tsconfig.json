{
    "compilerOptions": {
      "typeRoots": [
        "./node_modules/@types",
      ],
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "es6",
      "target": "es5",
      "jsx": "react-jsx",
      "allowJs": true,
      "moduleResolution": "node",
      "baseUrl": ".",
      "paths": { "*": ["./src/*"] },
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true
    },
    "ts-node": {
      "compilerOptions": {
        "module": "CommonJS",
        "strictNullChecks": false
      }
    }
  }